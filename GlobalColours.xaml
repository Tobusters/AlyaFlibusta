<ResourceDictionary x:Name="Theme"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary x:Name="Bone">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BoneTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="First">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeFirst.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Standart">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="/ThemeStandart.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="CoPilot">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeCoPilotLike.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Dark">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeDark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Night">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeNight.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Winter">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeWinter.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Summery">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeSummery.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Spring">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeSpring.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Autumn">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeAutumn.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Space">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeSpace.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <LinearGradientBrush x:Key="Grid" SpreadMethod="Reflect" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource FirstColorRGB }" Offset="0"/>
        <GradientStop Color="{StaticResource SecondColorRGB }"  Offset="0.25"/>
        <GradientStop Color="{StaticResource TherdColorRGB }" Offset="0.8"/>
    </LinearGradientBrush>
</ResourceDictionary>