<Window  x:Class="WpfApp1.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApp1"
		mc:Ignorable="d"
		Title="Flibusta" Width="800" Height="450">
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition MinHeight="15" MaxHeight="60"/>
            </Grid.RowDefinitions>
            <Grid x:Name="BookMain" Grid.Row="0" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Viewbox HorizontalAlignment="Left">
                    <StackPanel  >
                        <StackPanel  >
                            <Label Content="Поиск по названию" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBox Foreground="{StaticResource TextColorFirst}" Template="{DynamicResource TextBoxRegular}"  TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                        </StackPanel>
                        <StackPanel  HorizontalAlignment="Left"  >
                            <Label Content="Поиск по жанру" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Expander x:Name="GenreSelect">
                            </Expander>
                        </StackPanel>
                        <StackPanel  HorizontalAlignment="Left"  >
                            <Label Content="Поиск по оценке" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top"  />
                        </StackPanel>
                        <Button Template="{DynamicResource ButtonRegularRemake}" Content="Поиск" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 20" />
                        <!--<Button Content="Поиск" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 20" Template="{DynamicResource ButtonRegularRemake}" />-->
                    </StackPanel>
                </Viewbox>
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=20}" AutoGenerateColumns="True" x:Name="CollectionBooksViewTable" Grid.Column="1"/>
            </Grid>
            <Grid Name="Account" Grid.Row="0" Visibility="Hidden">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <Image Style="{StaticResource ImgAccount}" Width="50" Height="50" Margin="0,0,10,0"/>
                    <TextBlock Text="Имя пользователя" VerticalAlignment="Center" FontSize="20"/>
                </StackPanel>

                <!-- Кнопка "Написать" -->
                <Button Content="Написать" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Template="{DynamicResource ButtonRegularRemake}" Click="ToMessage"/>

                <Grid Margin="10,80,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Краткая статистика -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Добавлено книг: 123" Margin="0,0,0,10"/>
                        <TextBlock Text="Время жизни аккаунта: 2 года" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Список книг -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Expander Header="Книги">
                            <StackPanel>
                                <TextBlock Text="Название книги 1" Margin="5"/>
                                <TextBlock Text="Название книги 2" Margin="5"/>
                                <TextBlock Text="Название книги 3" Margin="5"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <Expander Header="Загруженные книги">
                            <StackPanel>
                                <TextBlock Text="Название книги 1" Margin="5"/>
                                <TextBlock Text="Название книги 2" Margin="5"/>
                                <TextBlock Text="Название книги 3" Margin="5"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Name="Upload" Grid.Row="0" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Поля для ввода Названия и Автора -->
                <StackPanel >
                    <TextBlock Text="Название книги" Margin="0,0,0,5"/>
                    <TextBox x:Name="BookTitle" Width="300"/>

                    <TextBlock Text="Автор" Margin="10,10,0,5"/>
                    <TextBox x:Name="Author" Width="300"/>



                    <!-- Большое поле для ввода описания книги -->
                    <TextBlock Text="Описание книги"/>
                    <TextBox x:Name="BookDescription" MinWidth="780" MinHeight="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <!-- Кнопки "Загрузить файл или ссылку" и "Опубликовать" -->
                </StackPanel>
                <Button Content="Загрузить файл или ссылку" Width="150" VerticalAlignment="Bottom" Template="{DynamicResource ButtonRegularRemake}"/>
                <!-- Жанры -->
                <Expander Header="Жанры" Grid.Column="1">
                    <StackPanel>
                        <CheckBox Content="Фантастика"/>
                        <CheckBox Content="Роман"/>
                        <CheckBox Content="Детектив"/>
                        <CheckBox Content="Научная литература"/>
                        <CheckBox Content="Приключения"/>
                        <!-- Добавьте больше жанров по мере необходимости -->
                    </StackPanel>
                </Expander>
                <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Опубликовать" Width="100" Grid.Column="1" Template="{DynamicResource ButtonRegularRemake}"/>
            </Grid>
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 0"  Grid.Row="1">
                <WrapPanel >
                    <Button Template="{DynamicResource ButtonMenuRemake}" Height="45" Width="88" Click="ToMainCollection">
                        <Viewbox>
                            <Grid Style="{x:Null}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="22*"/>
                                </Grid.RowDefinitions>
                                <Image Style="{StaticResource ImgBookExplore}" Grid.Row="0"/>
                                <TextBlock Text="Коллекция" Grid.Row="1" VerticalAlignment="Top" />
                            </Grid>
                        </Viewbox>
                    </Button>
                    <Button Template="{DynamicResource ButtonMenuRemake}" Height="45" Width="88" Click="ToUserAccount">
                        <Viewbox>
                            <Grid Style="{x:Null}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="22*"/>
                                </Grid.RowDefinitions>
                                <Image Style="{StaticResource ImgAccount}" Grid.Row="0"/>
                                <TextBlock Text="Аккаунт" Grid.Row="1" VerticalAlignment="Top" />
                            </Grid>
                        </Viewbox>
                    </Button>
                    <Button Template="{DynamicResource ButtonMenuRemake}" Height="45" Width="88" Click="ToUpload">
                        <Viewbox>
                            <Grid Style="{x:Null}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="22*"/>
                                </Grid.RowDefinitions>
                                <Image Style="{StaticResource ImgBookUploads}" Grid.Row="0"/>
                                <TextBlock Text="Мастерская" Grid.Row="1" VerticalAlignment="Top" />
                            </Grid>
                        </Viewbox>
                    </Button>
                </WrapPanel>
            </Viewbox>
            <!--Осталось доработать-->
            <Grid x:Name="Messager" Visibility="Visible">
                <ListBox Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="397" Height="322"/>
                <TextBox Grid.Row="0" Foreground="{StaticResource TextColorFirst}" Template="{DynamicResource TextBoxRegular}" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Сообщения" VerticalAlignment="Bottom" Width="265" Height="17" Margin="0,0,128,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Отправить" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Height="17" Width="125"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ToBackMessage"/>
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="326" Width="367" />
                <TextBox Grid.Row="0" Foreground="{StaticResource TextColorFirst}" Template="{DynamicResource TextBoxRegular}" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Поиск пользователей и групп" VerticalAlignment="Top" Width="345" Margin="0,1,52,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Поиск" HorizontalAlignment="Right" VerticalAlignment="Top" />
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Пользователи" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="48, 0,0,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Запросы" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="141,0,0,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="ЗаБАНеные" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="206,0,0,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Группы" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="283,0,0,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Подписки" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="334,0,0,0"/>
            </Grid>
            <Grid x:Name="PreviewBook" Visibility="Hidden">
                <Image Grid.Row="0"  HorizontalAlignment="Left" Height="230" Width="140"  VerticalAlignment="Top" />
                <TextBlock Grid.Row="0" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Назыание книги" VerticalAlignment="Top" Height="55" Width="617" Margin="0,0,5,0"/>
                <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Описание" VerticalAlignment="Center" Height="244" Width="649" Margin="151,0,0,0"/>
                <Button Template="{DynamicResource ButtonRegularRemake}" Grid.Row="0" Content="Читать" HorizontalAlignment="Right" Margin="0,0,0,1" VerticalAlignment="Bottom" Height="50" Width="90"/>
                <Button Template="{DynamicResource ButtonRegularRemake}" Grid.Row="0" Content="Назад" HorizontalAlignment="Left" Margin="-1,0,0,2" VerticalAlignment="Bottom" Height="50" Width="90" Click="ToBackBook"/>
                <Button Template="{DynamicResource ButtonRegularRemake}" Grid.Row="0" Content="Комментарии" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="50" Width="90" Click="ToComment"/>
                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Margin="0,236,0,0" TextWrapping="Wrap" Text="Оценка 0\0" VerticalAlignment="Top" Width="90"/>
                <Label Grid.Row="0" Content="Ваша оценка" HorizontalAlignment="Left" Margin="0,254,0,0" VerticalAlignment="Top"/>
                <Slider Grid.Row="0" HorizontalAlignment="Left" Margin="0,277,0,0" VerticalAlignment="Top" Width="120"/>
            </Grid>
            <Grid x:Name="Comments" Visibility="Hidden" Margin="400,0,0,0">
                <TextBox Grid.Row="0" Foreground="{StaticResource TextColorFirst}" Template="{DynamicResource TextBoxRegular}" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Твой коммент" VerticalAlignment="Top" Width="256" Margin="0,355,0,0"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="ToBackComments"/>
                <Button Grid.Row="0" Template="{DynamicResource ButtonRegularRemake}" Content="Отправить" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                <ListBox Grid.Row="0" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="399" Height="301"/>

            </Grid>
            <Grid x:Name="Settings" Visibility="Hidden">
                <!--Пока в разработке -->
            </Grid>
            <!--Временно-->
            <Button Template="{DynamicResource ButtonRegularRemake}" Content="Пока так" HorizontalAlignment="Left" Margin="1,2,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Timed"/>
            <Button Template="{DynamicResource ButtonRegularRemake}" Content="Settings" HorizontalAlignment="Left" Margin="2,23,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
