<Window x:Class="WpfApp1.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApp1"
		mc:Ignorable="d"
		Title="MainWindow" Width="800" Height="450">
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition MinHeight="15" MaxHeight="60"/>
            </Grid.RowDefinitions>
            <Grid x:Name="BookMain" Grid.Row="0" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Viewbox HorizontalAlignment="Left">
                <StackPanel  >
                    <StackPanel  >
                    <Label Content="Поиск по названию" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Template="{DynamicResource TextBoxRegular}"  TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                </StackPanel>
                <StackPanel  HorizontalAlignment="Left"  >
                    <Label Content="Поиск по жанру" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Expander x:Name="GenreSelect">
                    </Expander>
                </StackPanel>
                <StackPanel  HorizontalAlignment="Left"  >
                    <Label Content="Поиск по оценке" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top"  />
                </StackPanel>
                <Button Template="{DynamicResource Goyda}" Content="Поиск" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 20"  />
                </StackPanel>
                </Viewbox>
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=20}" Grid.Column="1"/>
            </Grid>
            <Grid Name="Account" Grid.Row="0" Visibility="Hidden">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <Image Style="{StaticResource ImgAccount}" Width="50" Height="50" Margin="0,0,10,0"/>
                    <TextBlock Text="Имя пользователя" VerticalAlignment="Center" FontSize="20"/>
                </StackPanel>

                <!-- Кнопка "Написать" -->
                <Button Content="Написать" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Template="{DynamicResource ButtonRegular}"/>

                <Grid Margin="10,80,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Краткая статистика -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Добавлено книг: 123" Margin="0,0,0,10"/>
                        <TextBlock Text="Время жизни аккаунта: 2 года" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Список книг -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Expander Header="Книги">
                            <StackPanel>
                                <TextBlock Text="Название книги 1" Margin="5"/>
                                <TextBlock Text="Название книги 2" Margin="5"/>
                                <TextBlock Text="Название книги 3" Margin="5"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <Expander Header="Загруженные книги">
                            <StackPanel>
                                <TextBlock Text="Название книги 1" Margin="5"/>
                                <TextBlock Text="Название книги 2" Margin="5"/>
                                <TextBlock Text="Название книги 3" Margin="5"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Name="Upload" Grid.Row="0" Visibility="Visible">
                <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top"/>
                <Button Content="Выбрать" HorizontalAlignment="Left" Margin="10,162,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Margin="10,54,0,0" Text="Введите название" VerticalAlignment="Top" Width="120"/>
                <Expander HorizontalAlignment="Left" Height="60" Header="Expander" Margin="10,102,0,0" VerticalAlignment="Top" Width="100">
                    <Grid Background="#FFE5E5E5"/>
                </Expander>
                <Expander HorizontalAlignment="Left" Height="60" Header="Expander" Margin="10,242,0,0" VerticalAlignment="Top" Width="100">
                    <Grid Background="#FFE5E5E5"/>
                </Expander>
                <TextBlock HorizontalAlignment="Left" Margin="10,187,0,0" TextWrapping="Wrap" Text="Укажите возрастную категорию книги" VerticalAlignment="Top" Height="50" Width="100"/>

            </Grid>
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 0"  Grid.Row="1">
            <WrapPanel >
                <Button Template="{DynamicResource ButtonMenu}" Height="45" Width="88" Click="ToMainCollection">
                    <Viewbox>
                        <Grid Style="{x:Null}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="22*"/>
                            </Grid.RowDefinitions>
                            <Image Style="{StaticResource ImgBookExplore}" Grid.Row="0"/>
                            <TextBlock Text="Коллекция" Grid.Row="1" VerticalAlignment="Top"/>
                        </Grid>
                    </Viewbox>
                </Button>
                <Button Template="{DynamicResource ButtonMenu}" Height="45" Width="88" Click="ToUserAccount">
                    <Viewbox>
                        <Grid Style="{x:Null}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="22*"/>
                            </Grid.RowDefinitions>
                            <Image Style="{StaticResource ImgAccount}" Grid.Row="0"/>
                            <TextBlock Text="Аккаунт" Grid.Row="1" VerticalAlignment="Top"/>
                        </Grid>
                    </Viewbox>
                </Button>
                <Button Template="{DynamicResource ButtonMenu}" Height="45" Width="88" Click="ToUpload">
                    <Viewbox>
                        <Grid Style="{x:Null}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23*" />
                                <RowDefinition Height="22*"/>
                            </Grid.RowDefinitions>
                            <Image Style="{StaticResource ImgBookUploads}" Grid.Row="0"/>
                            <TextBlock Text="Мастерская" Grid.Row="1" VerticalAlignment="Top"/>
                        </Grid>
                    </Viewbox>
                </Button>
            </WrapPanel>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
