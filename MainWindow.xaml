<Window x:Class="WpfApp1.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApp1"
		mc:Ignorable="d"
		Title="MainWindow" Width="800" Height="450">
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition MinHeight="15" MaxHeight="60"/>
            </Grid.RowDefinitions>
            <Grid x:Name="BookMain" Grid.Row="0" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Viewbox HorizontalAlignment="Left">
                    <StackPanel  >
                        <StackPanel  >
                            <Label Content="Поиск по названию" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <CheckBox Template="{DynamicResource CustomCheckBoxes}" IsChecked="True" Background="White" Content="СДЕЛАЙ МНЕ ШАБЛОН" />
                            <TextBox Foreground="{StaticResource TextColorFirst}" Template="{DynamicResource TextBoxRegular}"  TextWrapping="Wrap" Text="Перенести все основные градиенты в Словари тем, для большей кастомизации также переделай шаблоны для кнопок, можно просто менять заранее объявленные цвета не залазяя в цвета градиента" VerticalAlignment="Top"/>
                        </StackPanel>
                        <StackPanel  HorizontalAlignment="Left"  >
                            <Label Content="Поиск по жанру" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Expander x:Name="GenreSelect">
                            </Expander>
                        </StackPanel>
                        <StackPanel  HorizontalAlignment="Left"  >
                            <Label Content="Поиск по оценке" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top"  />
                        </StackPanel>
                        <Button Content="Поиск" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 20" Template="{DynamicResource ButtonRegular}" />
                    </StackPanel>
                </Viewbox>
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=20}" Grid.Column="1"/>
            </Grid>
            <Grid Name="Account" Grid.Row="0" Visibility="Hidden">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                    <Image Style="{StaticResource ImgAccount}" Width="50" Height="50" Margin="0,0,10,0"/>
                    <TextBlock Text="Имя пользователя" VerticalAlignment="Center" FontSize="20"/>
                </StackPanel>

                <!-- Кнопка "Написать" -->
                <Button Content="Написать" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Template="{DynamicResource ButtonRegular}"/>

                <Grid Margin="10,80,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Краткая статистика -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Добавлено книг: 123" Margin="0,0,0,10"/>
                        <TextBlock Text="Время жизни аккаунта: 2 года" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Список книг -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Expander Header="Книги">
                            <StackPanel>
                                <TextBlock Text="Название книги 1" Margin="5"/>
                                <TextBlock Text="Название книги 2" Margin="5"/>
                                <TextBlock Text="Название книги 3" Margin="5"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <Expander Header="Загруженные книги">
                            <StackPanel>
                                <TextBlock Text="Название книги 1" Margin="5"/>
                                <TextBlock Text="Название книги 2" Margin="5"/>
                                <TextBlock Text="Название книги 3" Margin="5"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Name="Upload" Grid.Row="0" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Поля для ввода Названия и Автора -->
                <StackPanel >
                    <TextBlock Text="Название книги" Margin="0,0,0,5"/>
                    <TextBox x:Name="BookTitle" Width="300"/>

                    <TextBlock Text="Автор" Margin="10,10,0,5"/>
                    <TextBox x:Name="Author" Width="300"/>



                    <!-- Большое поле для ввода описания книги -->
                    <TextBlock Text="Описание книги"/>
                    <TextBox x:Name="BookDescription" MinWidth="780" MinHeight="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                    <!-- Кнопки "Загрузить файл или ссылку" и "Опубликовать" -->
                </StackPanel>
                <Button Content="Загрузить файл или ссылку" Width="150" VerticalAlignment="Bottom" Template="{DynamicResource ButtonRegular}"/>
                <!-- Жанры -->
                <Expander Header="Жанры" Grid.Column="1">
                    <StackPanel>
                        <CheckBox Content="Фантастика"/>
                        <CheckBox Content="Роман"/>
                        <CheckBox Content="Детектив"/>
                        <CheckBox Content="Научная литература"/>
                        <CheckBox Content="Приключения"/>
                        <!-- Добавьте больше жанров по мере необходимости -->
                    </StackPanel>
                </Expander>
                <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Опубликовать" Width="100" Grid.Column="1" Template="{DynamicResource ButtonRegular}"/>
            </Grid>
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 0"  Grid.Row="1">
                <WrapPanel >
                    <Button Template="{DynamicResource ButtonMenu}" Height="45" Width="88" Click="ToMainCollection">
                        <Viewbox>
                            <Grid Style="{x:Null}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="22*"/>
                                </Grid.RowDefinitions>
                                <Image Style="{StaticResource ImgBookExplore}" Grid.Row="0"/>
                                <TextBlock Text="Коллекция" Grid.Row="1" VerticalAlignment="Top" />
                            </Grid>
                        </Viewbox>
                    </Button>
                    <Button Template="{DynamicResource ButtonMenu}" Height="45" Width="88" Click="ToUserAccount">
                        <Viewbox>
                            <Grid Style="{x:Null}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="22*"/>
                                </Grid.RowDefinitions>
                                <Image Style="{StaticResource ImgAccount}" Grid.Row="0"/>
                                <TextBlock Text="Аккаунт" Grid.Row="1" VerticalAlignment="Top" />
                            </Grid>
                        </Viewbox>
                    </Button>
                    <Button Template="{DynamicResource ButtonMenu}" Height="45" Width="88" Click="ToUpload">
                        <Viewbox>
                            <Grid Style="{x:Null}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="22*"/>
                                </Grid.RowDefinitions>
                                <Image Style="{StaticResource ImgBookUploads}" Grid.Row="0"/>
                                <TextBlock Text="Мастерская" Grid.Row="1" VerticalAlignment="Top" />
                            </Grid>
                        </Viewbox>
                    </Button>
                </WrapPanel>
            </Viewbox>

            <Grid Visibility="Hidden">
                <TextBox HorizontalAlignment="Right" Margin="0,37,10,0" TextWrapping="Wrap" Text="ЧАТ" VerticalAlignment="Top" Width="390" Height="365"/>
                <TextBox HorizontalAlignment="Left" Margin="400,407,0,0" TextWrapping="Wrap" Text="Сообщения" VerticalAlignment="Top" Width="265" Height="17"/>
                <Button Content="Отправить" HorizontalAlignment="Left" Margin="665,407,0,0" VerticalAlignment="Top" Height="17" Width="125"/>
                <Button Content="Я" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top"/>
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,37,405,10"/>
                <TextBox HorizontalAlignment="Left" Margin="400,14,0,0" TextWrapping="Wrap" Text="Поиск пользователей и групп" VerticalAlignment="Top" Width="345"/>
                <Button Content="Поиск" HorizontalAlignment="Left" Margin="750,12,0,0" VerticalAlignment="Top"/>
                <Button Content="Пользователи" HorizontalAlignment="Left" Margin="26,12,0,0" VerticalAlignment="Top"/>
                <Button Content="Запросы" Margin="112,12,646,402"/>
                <Button Content="ЗаБАНеные" HorizontalAlignment="Left" Margin="159,12,0,0" VerticalAlignment="Top"/>
                <Button Content="Группы" HorizontalAlignment="Left" Margin="232,13,0,0" VerticalAlignment="Top"/>
                <Button Content="Подписки" HorizontalAlignment="Left" Margin="282,12,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Visibility="Hidden">
                <Image HorizontalAlignment="Left" Height="230" Width="140" Margin="10,10,0,0" VerticalAlignment="Top" />
                <TextBlock HorizontalAlignment="Left" Margin="173,10,0,0" TextWrapping="Wrap" Text="Назыание книги" VerticalAlignment="Top" Height="43" Width="617"/>
                <TextBlock HorizontalAlignment="Left" Margin="173,58,0,0" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top" Height="210" Width="627"/>
                <Button Content="Читать" HorizontalAlignment="Left" Margin="700,372,0,0" VerticalAlignment="Top" Height="50" Width="90"/>
                <Button Content="Назад" HorizontalAlignment="Left" Margin="10,372,0,0" VerticalAlignment="Top" Height="50" Width="90"/>
                <Button Content="Комментарии" HorizontalAlignment="Center" Margin="0,372,0,0" VerticalAlignment="Top" Height="50" Width="90"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,266,0,0" TextWrapping="Wrap" Text="Оценка 0\0" VerticalAlignment="Top" Width="90"/>
                <Label Content="Ваша оценка" HorizontalAlignment="Left" Margin="10,287,0,0" VerticalAlignment="Top"/>
                <Slider HorizontalAlignment="Left" Margin="10,313,0,0" VerticalAlignment="Top" Width="120"/>
            </Grid>
            <Grid Visibility="Hidden" Margin="400,0,0,0">
                <TextBox HorizontalAlignment="Left" Margin="10,406,0,0" TextWrapping="Wrap" Text="Твой коммент" VerticalAlignment="Top" Width="300"/>
                <Button Content="Назад" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Button Content="Отправить" HorizontalAlignment="Left" Margin="315,404,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="ЧАТ комментов" VerticalAlignment="Center" Width="300" Height="366"/>

            </Grid>

        </Grid>
    </Grid>
</Window>
