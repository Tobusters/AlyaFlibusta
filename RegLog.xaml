<Window x:Class="WpfApp1.RegLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="RegLog" Height="450" Width="200">
    <Grid>
        <Grid x:Name="Log" Visibility="Hidden">
            <Viewbox>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100">
                    <Label Content="Логин:"/>
                    <TextBox/>
                    <Label Content="Пароль:"/>
                    <TextBox/>
                    <Button Content="Войти"/>
                </StackPanel>
            </Viewbox>
        </Grid>
        <Grid x:Name="Reg" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="300*"/>
                <RowDefinition Height="150*"/>
            </Grid.RowDefinitions>
            <Viewbox>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="100">
                <Label Content="Email:"/>
                <TextBox/>
                <Label Content="Логин:"/>
                <TextBox/>
                <Label Content="Пароль:"/>
                <TextBox/>
                <Button Content="Регистрация"/>
            </StackPanel>
            </Viewbox>
            <StackPanel Grid.Row="1" Style="{StaticResource Smaller}" HorizontalAlignment="Center">
                <Label Content="Уже есть аккаунт?"/>
                <Button Content="Войти" Click="ToLogIn"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
